<%= form_for @room, :html => { :class => 'form-horizontal' },  :remote => true  do |f| %>
  <div class="control-group">
    <%= f.label :rType, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rType, :class => 'text_field' %>
    </div>
  </div>


  <%= render :partial => 'event_fields', :locals => {:f => f} %>


    <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rooms_path, :class => 'btn' %>
  </div>
<% end %>


